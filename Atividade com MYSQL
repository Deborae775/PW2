<?php

$host = "localhost";
$username = "aluno";
$password = "aluno.etec";
$database = "teste";

$conn = mysqli_connect($host, $username, $password, $database);

$sql = "SELECT cod, aluno, email, celular FROM alunos";

$resultados = mysqli_query($conn, $sql);

if (mysqli_num_rows($resultados) == 0) {
    echo "Sem resultados para exibir!";
}

echo "<table border='1'>";
while($linha = mysqli_fetch_assoc($resultados)) {
    echo "<tr>
            <td>" . $linha["cod"] . "</td>
            <td>" . $linha["aluno"] . "</td>
            <td>" . $linha["email"] . "</td>
            <td>" . $linha["celular"] . "</td>
          </tr>";
}
echo "</table>";
?>
</body>
