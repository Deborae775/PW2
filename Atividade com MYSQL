//No MYSQL 

 CREATE TABLE alunos (
    cod INT NOT NULL AUTO_INCREMENT,
    aluno VARCHAR(100) NOT NULL,
    email VARCHAR(100),
    celular VARCHAR(20),
    PRIMARY KEY (cod)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;


